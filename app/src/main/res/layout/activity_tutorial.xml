<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/floral_white"
    tools:context=".TutorialActivity">

    <!-- TÍTOL -->
    <TextView
        android:id="@+id/tvTutorialTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_title"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:fontFamily="@font/baloo2_extrabold"
        android:textColor="@color/brown"
        android:gravity="center"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTutorialTitle"
        app:layout_constraintBottom_toTopOf="@id/btnEntes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Cada fila: botó  + text  -->
        <!-- Fila AVUI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp">

            <Button
                android:id="@+id/btnAvuiTutorial"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="@string/btn_avui_text"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvHelpAvui"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/help_avui"
                android:textSize="15sp"
                android:textColor="@color/brown"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Fila TOT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <Button
                android:id="@+id/btnTotTutorial"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="@string/btn_tot_text"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvHelpTot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/help_tot"
                android:textSize="15sp"
                android:textColor="@color/brown"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Fila FET -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <Button
                android:id="@+id/btnFetTutorial"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="@string/btn_fet_text"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvHelpFet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/help_fet"
                android:textSize="15sp"
                android:textColor="@color/brown"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Fila CALENDARI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <Button
                android:id="@+id/btnCalendariTutorial"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="@string/btn_calendari_text"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvHelpCalendari"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/help_calendari"
                android:textSize="15sp"
                android:textColor="@color/brown"
                android:padding="10dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnEntes"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="@string/btn_entes_text"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>