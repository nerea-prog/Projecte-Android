<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:paddingTop="40dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/btnTestNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test"
        android:layout_marginTop="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_marginStart="15dp"
            android:id="@+id/btnTornar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="@string/btnTornar" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/baloo2_extrabold"
            android:text="@string/tvRegister"
            android:textAllCaps="true"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="20dp"
            android:hint="@string/etNom"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:autofillHints="name"/>

        <EditText
            android:id="@+id/etGmail"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginTop="15dp"
            android:hint="@string/tvEmail"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:maxWidth="400dp"/>


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginTop="15dp"
            android:hint="@string/tvPassword"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/etPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:layout_marginTop="15dp"
            android:hint="@string/tvconfirmPassword"
            android:background="@android:drawable/edit_text"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPassword"
            android:autofillHints="password"/>

        <Button
            android:id="@+id/btnRegistre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="15dp"
            android:paddingBottom="30dp"
            android:text="@string/btnRegistre"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>